<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- 定义使用服务的的消费者bean -->
    <bean id="referenceBean" abstract="true" class="com.alibaba.dubbo.config.spring.ReferenceBean">
        <property name="application" ref="dubboApplicationConfig"/>
        <property name="registry" ref="dubboRegistryConfig"/>
        <property name="consumer" ref="consumerConfig"/>
        <property name="version" value="${consumer.default_version}"/>
    </bean>

    <bean id="consumerConfig" class="com.alibaba.dubbo.config.ConsumerConfig">
        <property name="check" value="${consume.service_check}"/>
    </bean>

    <bean id="accountService" parent="referenceBean">
        <property name="interface" value="com.shfc.cloud.account.service.AccountService"/>
    </bean>

    <bean id="sourceVirtualService" parent="referenceBean">
        <property name="interface" value="com.shfc.cloud.cloudbase.service.SourceVirtualService"/>
    </bean>

    <bean id="sourceDatabaseService" parent="referenceBean">
        <property name="interface" value="com.shfc.cloud.cloudbase.service.SourceDatabaseService"/>
    </bean>

    <bean id="channelService" parent="referenceBean">
        <property name="interface" value="com.shfc.cloud.cloudbase.service.ChannelService"/>
    </bean>
    <bean id="logStatisticsService" parent="referenceBean">
        <property name="interface" value="com.shfc.log.service.LogStatisticsService"/>
    </bean>
    <bean id="videoService" parent="referenceBean">
        <property name="interface" value="com.shfc.cloud.video.service.VideoService"/>
    </bean>
</beans>